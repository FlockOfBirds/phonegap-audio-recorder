<?xml version="1.0" encoding="utf-8" ?>
<widget id="AudioRecorder.widget.AudioRecorder" needsEntityContext="true" xmlns="http://www.mendix.com/widget/1.0/">
    <name>Phonegap audio recorder</name>
    <description>Creates a button to use the audio recorder functionality</description>
    <icon/>
    <phonegap enabled="true"/>
    <properties>
        <property key="buttonLabel" type="string" required="true">
            <caption>Label</caption>
            <category>Button</category>
            <description/>
        </property>
        <property key="buttonClass" type="string" required="false">
            <caption>Class</caption>
            <category>Button</category>
            <description/>
        </property>
        <property key="onSaveMicroflow" type="microflow" required="false">
            <caption>Save microflow</caption>
            <category>Events</category>
            <description/>
            <returnType type="Void"/>
        </property>
    </properties>
</widget>
